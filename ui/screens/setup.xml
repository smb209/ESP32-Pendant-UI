<screen>
	<styles>
		<style name="style_setting_row" 
			   bg_color="#secondary_bg" 
			   border_width="1" 
			   border_color="#border_color" 
			   radius="#unit_sm" 
			   pad_all="#unit_md" 
			   width="90%" 
			   height="60" 
			   margin_bottom="#unit_sm" />
		
		<style name="style_slider" 
			   bg_color="#border_color" 
			   bg_opa="#opa_muted" />
		
		<style name="style_slider_indicator" 
			   bg_color="#accent_color" />
	</styles>
	
	<view flex_flow="column" width="100%" height="100%">
		<!-- Apply base screen style -->
		<style name="style_screen_base" />
		
		<!-- Header -->
		<lv_obj width="100%" height="60" style_pad_all="#unit_md">
			<style name="style_panel" />
			<lv_label text="SETTINGS" align="center" />
		</lv_obj>
		
		<!-- Settings list -->
		<lv_obj style_flex_grow="1" width="100%" style_pad_all="#unit_md">
			<lv_obj style_flex_flow="column" width="100%" style_flex_cross_place="center">
				
				<!-- Jog Speed Setting -->
				<lv_obj style_margin_bottom="#unit_md">
					<style name="style_setting_row" />
					<lv_obj style_flex_flow="column" width="100%">
						<lv_label text="Jog Speed" style_text_color="#text_primary" />
						<lv_obj style_flex_flow="row" width="100%" style_flex_main_place="space_between">
							<lv_slider width="70%" style_bg_color="#border_color">
								<style name="style_slider_indicator" selector="indicator" />
							</lv_slider>
							<lv_label text="50%" style_text_color="#accent_color" />
						</lv_obj>
					</lv_obj>
				</lv_obj>
				
				<!-- Feed Override Setting -->
				<lv_obj style_margin_bottom="#unit_md">
					<style name="style_setting_row" />
					<lv_obj style_flex_flow="column" width="100%">
						<lv_label text="Feed Override" style_text_color="#text_primary" />
						<lv_obj style_flex_flow="row" width="100%" style_flex_main_place="space_between">
							<lv_slider width="70%" style_bg_color="#border_color">
								<style name="style_slider_indicator" selector="indicator" />
							</lv_slider>
							<lv_label text="100%" style_text_color="#accent_color" />
						</lv_obj>
					</lv_obj>
				</lv_obj>
				
				<!-- Display Brightness -->
				<lv_obj style_margin_bottom="#unit_md">
					<style name="style_setting_row" />
					<lv_obj style_flex_flow="column" width="100%">
						<lv_label text="Display Brightness" style_text_color="#text_primary" />
						<lv_obj style_flex_flow="row" width="100%" style_flex_main_place="space_between">
							<lv_slider width="70%" style_bg_color="#border_color">
								<style name="style_slider_indicator" selector="indicator" />
							</lv_slider>
							<lv_label text="80%" style_text_color="#accent_color" />
						</lv_obj>
					</lv_obj>
				</lv_obj>
				
				<!-- Connection Status -->
				<lv_obj style_margin_bottom="#unit_md">
					<style name="style_setting_row" />
					<lv_obj style_flex_flow="row" width="100%" style_flex_main_place="space_between">
						<lv_label text="Connection:" style_text_color="#text_primary" />
						<lv_label text="Disconnected" style_text_color="#warning_color" />
					</lv_obj>
				</lv_obj>
				
			</lv_obj>
		</lv_obj>
		
		<!-- Navigation footer -->
		<lv_obj width="100%" height="80" style_pad_all="#unit_md">
			<lv_obj style_flex_flow="row" width="100%" style_flex_main_place="space_around">
				<lv_button width="120" height="50">
					<style name="style_button_primary" />
					<lv_label text="SAVE" align="center" />
				</lv_button>
				<lv_button width="120" height="50">
					<style name="style_button_primary" />
					<lv_label text="BACK" align="center" />
				</lv_button>
			</lv_obj>
		</lv_obj>
		
		<!-- Status bar -->
		<lv_obj width="100%" height="30" style_bg_color="#secondary_bg">
			<lv_label bind_text="status_message" align="center" style_text_color="#text_secondary" />
		</lv_obj>
	</view>
</screen>
